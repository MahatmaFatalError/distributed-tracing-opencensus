<!DOCTYPE aspectj PUBLIC "-//AspectJ//DTD//EN" "https://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>

	<weaver options="-verbose -showWeaveInfo">
		<!-- path to concrete class -->
		<include within="org.springframework.jdbc.datasource.DataSourceUtils" />
	</weaver>

	<aspects>
		<!-- weave in just this aspect -->
		<aspect name="com.hello.spring.jdbc.ConnectionPoolTracingAspect" />
	</aspects>

</aspectj>